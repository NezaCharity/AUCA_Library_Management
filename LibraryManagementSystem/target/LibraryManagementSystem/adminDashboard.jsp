<%@ page contentType="text/html;charset=UTF-8" language="java" %>
<%@ page import="javax.servlet.http.HttpSession" %>
<%
    HttpSession session = request.getSession(false);
    String role = (String) session.getAttribute("role");

    if (session == null || role == null || !"librarian".equals(role)) {
        response.sendRedirect("../login.jsp?error=accessDenied");
        return;
    }
%>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="../css/styles.css">
    <style>
        /* Admin Dashboard Styling */
        .dashboard-container {
            display: flex;
            flex-direction: column;
            gap: 20px;
            margin: 0 auto;
            max-width: 1000px;
        }

        .header {
            background-color: #2C3E50;
            color: #ECF0F1;
            padding: 20px;
            text-align: center;
            border-radius: 8px;
        }

        .quick-links {
            display: flex;
            gap: 20px;
            flex-wrap: wrap;
            justify-content: space-between;
        }

        .link-card {
            background: #ECF0F1;
            width: 30%;
            padding: 15px;
            text-align: center;
            border-radius: 8px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s;
        }

        .link-card:hover {
            transform: translateY(-5px);
        }

        .link-card a {
            text-decoration: none;
            color: #2C3E50;
            font-weight: bold;
        }

        .stats-panel, .notifications-panel {
            background: #ECF0F1;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        }

        .stats-panel {
            display: flex;
            justify-content: space-around;
        }

        .stat-box {
            text-align: center;
            flex: 1;
            padding: 15px;
        }

        .stat-box h3 {
            font-size: 2em;
            margin-bottom: 5px;
        }

        .stat-box p {
            color: #7F8C8D;
        }

        .notifications-panel h3 {
            margin-bottom: 15px;
            color: #2C3E50;
        }

        .notification-item {
            border-bottom: 1px solid #BDC3C7;
            padding: 10px 0;
            color: #2C3E50;
        }

        .notification-item:last-child {
            border-bottom: none;
        }
    </style>
</head>
<body>
<div class="dashboard-container">
    <div class="header">
        <h2>Welcome, <%= role %></h2>
        <p>View all library activities and resources</p>
    </div>

    <!-- Statistics Panel -->
    <div class="stats-panel">
        <div class="stat-box">
            <h3>150</h3>
            <p>Total Books</p>
        </div>
        <div class="stat-box">
            <h3>20</h3>
            <p>Active Members</p>
        </div>
        <div class="stat-box">
            <h3>5</h3>
            <p>Overdue Books</p>
        </div>
    </div>

    <!-- Quick Links -->
    <div class="quick-links">
        <div class="link-card">
            <a href="viewBooks.jsp">üìö View Books</a>
            <p>Browse the complete collection of library books.</p>
        </div>
        <div class="link-card">
            <a href="viewMembers.jsp">üë• View Members</a>
            <p>Check library members and their information.</p>
        </div>
        <div class="link-card">
            <a href="viewBorrowedBooks.jsp">üìñ Borrowed Books</a>
            <p>View a list of currently borrowed books.</p>
        </div>
        <div class="link-card">
            <a href="inventoryReport.jsp">üìä Inventory Report</a>
            <p>View inventory reports for library resources.</p>
        </div>
        <div class="link-card">
            <a href="viewOverdue.jsp">‚è∞ Overdue Books</a>
            <p>Track books that are overdue for return.</p>
        </div>
        <div class="link-card">
            <a href="viewReports.jsp">üìã View Reports</a>
            <p>Access various reports generated by the library.</p>
        </div>
    </div>

    <!-- Notifications Panel -->
    <div class="notifications-panel">
        <h3>Recent Library Updates</h3>
        <div class="notification-item">
            <span>New Book Added: "Introduction to Java Programming"</span>
        </div>
        <div class="notification-item">
            <span>Member Renewal: John Doe</span>
        </div>
        <div class="notification-item">
            <span>Overdue Book Alert: "Advanced Python" by Jane Smith</span>
        </div>
        <!-- More notifications can be dynamically added here -->
    </div>
</div>
</body>
</html>
